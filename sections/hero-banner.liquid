{
    "name": "Hero Banner",
    "settings": [
            {
                "type": "image_picker",
                "id": "logo",
                "label": "Logo"
            },
            {
                "type": "text",
                "id": "topbar-text",
                "label": "Topbar Text",
                "default": "Find the ideal gift for your loved ones."
            },
            {
                "type": "text",

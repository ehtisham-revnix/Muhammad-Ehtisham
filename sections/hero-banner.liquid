<style>
    .topbar {
        background-color: #F5F5F5;
        padding-inline: 16px;
    }
    .topbar-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 22px 34px;
    }
    .logo {
        max-width: 151px;
        display: flex;
    }
    .logo img {
        width: 100%;
        height: auto;
    }
    .topbar-text {
        font-family: "Jost";
        font-weight: 400;
        font-size: 16px;
        line-height: 13.42px;
        letter-spacing: 0px;
        text-align: center;
        vertical-align: middle;
    }
    .topbar-content-mobile {
        display: none;
    }
    .hero-banner__wrapper {
        width: 100%;
        background-color: #FFFFFF;
    }
    .hero-banner p {
        margin: unset;
    }
    .hero-banner__top--image {
        height: 390px;
        background-image: url("https://cdn.shopify.com/s/files/1/0618/9108/4363/files/Frame_2.png?v=1749626818");
        background-position: center;
        background-repeat: no-repeat;
        background-size: contain;
    }
    .hero-banner__bottom--wrapper {
        display: flex;
        align-items: flex-start;
        padding-left: 67px;
    }
    .hero-banner__content {
        min-width: 483px;
        max-width: 483px;
    }
    .hero-banner__bottom--image {
        height: 402px;
        background-image: url("https://cdn.shopify.com/s/files/1/0618/9108/4363/files/Frame_3.png?v=1749626859");
        width: 100%;
        background-position: center;
        background-repeat: no-repeat;
        background-size: contain;
    }
    .hero-banner__content--heading {
        margin: unset;
        font-family: "Jost";
        font-weight: 500;
        font-size: 70px;
        line-height: 100%;
        letter-spacing: 0px;
        vertical-align: middle;
    }
    .hero-banner__content--text {
        margin-block: 50px !important;
        font-family: "Jost";
        font-weight: 400;
        font-size: 20px;
        line-height: 140%;
        letter-spacing: 0px;
        vertical-align: middle;
    }
    .hero-lower__text--mobile, .hero-banner__content--text-mob {
        display: none;
    }
    .hero-lower__text--desktop {
        background: #F5F5F5;
        padding-block: 10px;
        font-family: "Jost";
        font-weight: 400;
        font-size: 16px;
        line-height: 13.42px;
        letter-spacing: 0px;
        text-align: center;
        vertical-align: middle;
    }
    @media screen and (min-width: 1490px) {
          .hero-banner__top--image, .hero-banner__bottom--image  {
                background-size: cover;
          }
    }

    @media screen and (min-width:769px) and (max-width: 1420px) {

        .hero-banner__top--image {
            height: clamp(20.9rem, 27.803vw - 0.481rem, 39rem);
        }
        .hero-banner__bottom--wrapper {
            padding-left: clamp(2.7rem, 6.144vw - 2.025rem, 6.7rem);
        }
        .hero-banner__content--heading {
            font-size: clamp(3.4rem, 5.53vw - 0.853rem, 7rem);
        }
        .hero-banner__content--text {
            font-size: clamp(1.5rem, 0.768vw + 0.909rem, 2rem);
            margin-block: clamp(1.2rem, 5.837vw - 3.289rem, 5rem) !important;
        }
        .hero-banner__content {
            min-width: clamp(25rem, 35.791vw - 2.523rem, 48.3rem);
            max-width: clamp(25rem, 35.791vw - 2.523rem, 48.3rem);
        }
        .hero-banner__bottom--image {
            height: clamp(22.3rem, 27.496vw + 1.155rem, 40.2rem);
        }
    }

    @media screen and (max-width: 768px) {
        .topbar {
            background-color: #F7F7F7;
            padding-inline: unset;
        }
        .topbar-content, .hero-lower__text--desktop, .hero-banner__top--image {
            display: none;
        }
        .hero-lower__text--mobile {
            display: block;
        }
        .topbar-content-mobile {
            display: block;
            position: relative;
        }
        .burger-close, .nav-menu {
            display: none;
        }
        .burger {
            position: absolute;
            top: 19px;
            left: 16px;
        }
        .burger-open {
            width: 18px;
            height: 10px;
        }
        .burger-close {
            width: 13px;
            height: 13px;
        }
        .topbar-content-mobile .logo {
            display: flex;
            justify-content: center;
            align-content: center;
            padding-block: 23px;
            margin: 0 auto;
        }
        .nav-menu {
            display: none;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding-block: 25px;
            background: #F2F2F2;
        }
        .hero-banner__content--heading {
            font-weight: 500;
            font-size: 30px;
            line-height: 100%;
            letter-spacing: 0px;
            text-align: center;
            margin-top: 49px !important;
        }
        .hero-banner__content--text {
            display: none;
        }
        .hero-banner__content--text-mob {
            margin: 24px auto 0px!important;
            font-family: "Jost";
            font-weight: 400;
            font-size: 16px;
            line-height: 130%;
            letter-spacing: 0px;
            text-align: center;
            max-width: 340px;
        }
        .hero-banner__bottom--wrapper {
            padding-left: unset;
            position: relative;
        }
        .hero-banner__content {
            position: absolute;
        }
        .hero-banner__bottom--image {
            height: 264px;
            margin-top: 157px;
        }
        .hero-banner__content {
            min-width: 100%;
            max-width: 100%;
            height: 100%;
        }
        .hero-banner__content--btn {
            bottom: 39px;
            position: absolute;
            left: 50%;
            transform: translate(-50%);
        }
        .hero-banner__bottom--image {
            background-size: cover;
        }
        .hero-lower__text--mobile {
            background: #F5F5F5;
            padding-block: 10px;
            font-family: "Jost";
            font-weight: 400;
            font-size: 14px;
            line-height: 13.42px;
            letter-spacing: 0px;
            text-align: center;
            vertical-align: middle;
        }
    }
</style>


<section class="topbar">
    <div class="container">
        <div class="topbar-content">
            <div class="logo">
                <a href="{{ shop.url }}" class="logo-link">
                    <img src="{{ section.settings.logo |  img_url: 'master' }}" alt="{{ shop.name }}" class="logo-image">
                </a>
             </div>  
            <div class="topbar-text">
                <p> {{ section.settings.topbar-text }} </p>
            </div>
            <div class="topbar-btn">
                {% render 'custom-btn' btn_text: section.settings.button-text, btn_url: section.settings.button-url, btn_type: "btn-secondary" %}
            </div>
        </div>
        <div class="topbar-content-mobile">
            <div class="burger">
                <img class="burger-open" onclick="openMenu()" src="https://cdn.shopify.com/s/files/1/0618/9108/4363/files/burger-oprn.png?v=1749614303">
                <img class="burger-close" onclick="closeMenu()" src="https://cdn.shopify.com/s/files/1/0618/9108/4363/files/burger-close.png?v=1749614340">      
            </div>
            <div class="logo">
                <a href="{{ shop.url }}" class="logo-link">
                    <img src="{{ section.settings.logo |  img_url: 'master' }}" alt="{{ shop.name }}" class="logo-image">
                </a>
             </div> 
             <div class="nav-menu">
                <div class="topbar-text">
                    <p> {{ section.settings.topbar-text }} </p>
                </div>
                <div class="topbar-btn">
                    {% render 'custom-btn' btn_text: section.settings.button-text, btn_url: section.settings.button-url, btn_type: "btn-secondary" %}
                </div>
             </div>
        </div>
    </div>
</section>

<section class="hero-banner">
    <div class="container">
        <div class="hero-banner__wrapper">
            <div class="hero-banner__top--image">
            </div>
            <div class="hero-banner__bottom--wrapper">
                <div class="hero-banner__content">
                    <h1 class="hero-banner__content--heading"> 
                        {{ section.settings.heading }} 
                    </h1>
                    <p class="hero-banner__content--text">
                        {{ section.settings.text }}
                    </p>
                    <p class="hero-banner__content--text-mob">
                        {{ section.settings.text-mob }}
                    </p>
                    <div class="hero-banner__content--btn">
                        {% render 'custom-btn' btn_text: section.settings.hero-button-text, btn_url: section.settings.hero-button-url, btn_type: "btn-primary" %}
                    </div>
                </div>
                <div class="hero-banner__bottom--image">
                </div>
            </div>
        </div>
        <div class="hero-lower__text--desktop">
            <p> {{ section.settings.hero-lower-text }} </p>
        </div>
        <div class="hero-lower__text--mobile">
            <p> {{ section.settings.hero-lower-text-mob }} </p>
    </div>

</section>


<script>
    function openMenu() {
        document.querySelector(".burger-open").style.display = "none";
        document.querySelector(".burger-close").style.display = "inline-block";
        document.querySelector(".nav-menu").style.display = "flex";
    }
        function closeMenu() {
        document.querySelector(".burger-open").style.display = "inline-block";
        document.querySelector(".burger-close").style.display = "none";
        document.querySelector(".nav-menu").style.display = "none";
    }
</script>


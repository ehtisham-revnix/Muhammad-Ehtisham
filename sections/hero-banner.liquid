                "label": "Button Text",
                "default": "choose gift"
            },
            {
                "type": "url",
                "id": "button-url",
                "label": "Button URL"
            },

            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "The Gift Guide"
            },
            {
                "type": "textarea",
                "id": "text",
                "label": "Text",
                "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
            },
            {
                "type": "textarea",
                "id": "text-mob",
                "label": "Text (Mobile)",
                "default": "Discover Joy: Your Ultimate Holiday Gift Destination."
            },
            {
                "type": "text",
                "id": "hero-button-text",
                "label": "Hero Button Text",
                "default": "Shop Now"
            },
            {
                "type": "url",
                "id": "hero-button-url",
                "label": "Hero Button URL"
            },

            {
                "type": "text",
                "id": "hero-lower-text",
                "label": "Hero Lower Text (Desktop)",
                "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL "
            },
            {
                "type": "text",
                "id": "hero-lower-text-mob",
                "label": "Hero Lower Text (Mobile)",
                "default": "SUSTAINABLE, ETHICALLY MADE ACTIVEWEAR"
            }
        ],  
        "presets": [
            {
                "name": "Hero Banner",
                "category": "Header"
            }
        ]
}
{% endschema %}